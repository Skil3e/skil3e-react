{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "ES5"
  },
  "include": [
    "docz/src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
